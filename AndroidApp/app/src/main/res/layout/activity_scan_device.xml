<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainTab">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:flashButtonVisible="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#6C000000">

    </com.budiyev.android.codescanner.CodeScannerView>

    <Button
        android:id="@+id/exit2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="Thoát"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ac_cb"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:buttonTint="@color/white"
        android:text="Điều khiển"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="140dp"/>

    <CheckBox
        android:id="@+id/hdmi_cb"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:buttonTint="@color/white"
        android:text="Cáp HDMI"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="100dp"/>

    <CheckBox
        android:id="@+id/laser_cb"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginBottom="140dp"
        android:buttonTint="@color/white"
        android:text="Bút Laser"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/micro_cb"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginBottom="100dp"
        android:buttonTint="@color/white"
        android:text="Micro"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_view"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
