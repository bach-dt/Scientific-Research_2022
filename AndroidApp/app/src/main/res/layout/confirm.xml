<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <View
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Lịch sử mượn thiết bị"
        android:textColor="#3293D5"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/borrow_tm"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:gravity="right"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="23/09/2022 00h:01"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/textView24"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/view3"
        android:layout_width="326dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <CheckBox
        android:id="@+id/ac"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:buttonTint="#646464"
        android:text="Điều khiển"
        android:textColor="#464646"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <CheckBox
        android:id="@+id/mic"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="216dp"
        android:text="Míc di động"
        android:buttonTint="#646464"
        android:textColor="#464646"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/ac" />

    <CheckBox
        android:id="@+id/hdmi"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:buttonTint="#646464"
        android:text="Cáp HDMI"
        android:textColor="#464646"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ac"
        app:layout_constraintTop_toBottomOf="@+id/ac" />

    <CheckBox
        android:id="@+id/laser"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="216dp"
        android:text="Bút Laser"
        android:buttonTint="#646464"
        android:textColor="#464646"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/mic" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="350dp"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>